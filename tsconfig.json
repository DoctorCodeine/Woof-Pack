{
	"compilerOptions": {
		"target": "ESnext",
		"useDefineForClassFields": true,
		"lib": ["dom", "dom.iterable", "ESNext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "commonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noImplicitAny": false,
		"baseUrl": "."
		// "paths": {
		// 	"woofpack2/*": ["./src/*"]
		// },
	},
	"watch": ["server/**/*", "server.ts"],
	"include": [
		"src",
		"src/server",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/server",
		"pages"
	],
	"exclude": ["node_modules", ""]
}
